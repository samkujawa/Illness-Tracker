<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SymptomTracker.ModifyRecord">
    <VerticalStackLayout Spacing="20">
        <Label Text="Modify Symptom" FontSize="32"/>
        <DatePicker x:Name="DateInput"/>
        <TimePicker x:Name="TimeInput" IsEnabled="True" IsVisible="True"/>
        <Picker x:Name="intensityInput" Title="Select Intensity">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:Int32}">
                    <x:Int32>1</x:Int32>
                    <x:Int32>2</x:Int32>
                    <x:Int32>3</x:Int32>
                    <x:Int32>4</x:Int32>
                    <x:Int32>5</x:Int32>
                    <x:Int32>6</x:Int32>
                    <x:Int32>7</x:Int32>
                    <x:Int32>8</x:Int32>
                    <x:Int32>9</x:Int32>
                    <x:Int32>10</x:Int32>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Editor x:Name="NotesInput" Placeholder="Enter notes"/>
        <Button Text="Update" Clicked="OnUpdateClicked"/>
        <Button Text="Cancel" Clicked="OnCancelButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
